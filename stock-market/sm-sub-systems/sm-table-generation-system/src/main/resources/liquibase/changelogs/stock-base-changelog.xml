<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001" author="Ravaneswaran Chinnasamy">
        <createTable tableName="stock_base">
            <column name="id" type="varchar2(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="source" type="varchar2(100)"/>
            <column name="mkt" type="varchar2(100)"/>
            <column name="series" type="varchar2(100)"/>
            <column name="stock_symbol" type="varchar2(100)"/>
            <column name="stock_name" type="varchar2(100)"/>
            <column name="open_price" type="varchar2(100)"/>
            <column name="high_price" type="varchar2(100)"/>
            <column name="low_price" type="varchar2(100)"/>
            <column name="close_price" type="varchar2(100)"/>
            <column name="previous_close_price" type="varchar2(100)"/>
            <column name="net_traded_value" type="varchar2(100)"/>
            <column name="net_traded_quantity" type="varchar2(100)"/>
            <column name="index_or_security" type="varchar2(100)"/>
            <column name="corp_index" type="varchar2(100)"/>
            <column name="trades" type="varchar2(100)"/>
            <column name="high_52_week" type="varchar2(100)"/>
            <column name="low_52_week" type="varchar2(100)"/>
            <column name="daily_close_price" type="varchar2(2000)"/>
            <column name="created_date" type="datetime"/>
            <column name="modified_date" type="datetime"/>
            <column name="created_by" type="varchar2(100)"/>
            <column name="modified_by" type="varchar2(100)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>