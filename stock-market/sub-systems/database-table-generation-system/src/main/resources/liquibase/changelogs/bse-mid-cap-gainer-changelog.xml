<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001" author="Ravaneswaran Chinnasamy">
        <createTable tableName="bse_mid_cap_gainer">
            <column name="id" type="varchar2(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="company_name" type="varchar2(100)"/>
            <column name="high" type="varchar2(100)"/>
            <column name="low" type="varchar2(100)"/>
            <column name="last_price" type="varchar2(100)"/>
            <column name="previous_close" type="varchar2(100)"/>
            <column name="variation" type="varchar2(100)"/>
            <column name="percentage_gain" type="varchar2(100)"/>
            <column name="average_volume_5d" type="varchar2(100)"/>
            <column name="average_volume_10d" type="varchar2(100)"/>
            <column name="average_volume_30d" type="varchar2(100)"/>
            <column name="price_to_earning_ratio" type="varchar2(100)"/>
            <column name="price_to_book_ratio" type="varchar2(100)"/>
            <column name="upper_circuit" type="varchar2(100)"/>
            <column name="lower_circuit" type="varchar2(100)"/>
            <column name="volume_weighted_average_price" type="varchar2(100)"/>
            <column name="displaced_moving_average_30d" type="varchar2(100)"/>
            <column name="displaced_moving_average_50d" type="varchar2(100)"/>
            <column name="displaced_moving_average_150d" type="varchar2(100)"/>
            <column name="displaced_moving_average_200d" type="varchar2(100)"/>
            <column name="created_date" type="datetime"/>
            <column name="modified_date" type="datetime"/>
            <column name="created_by" type="varchar2(100)"/>
            <column name="modified_by" type="varchar2(100)"/>
        </createTable>
    </changeSet>

    <changeSet author="Ravaneswaran Chinnasamy" id="002">
        <dropPrimaryKey dropIndex="true" tableName="bse_mid_cap_gainer"/>
    </changeSet>

    <changeSet  author="Ravaneswaran Chinnasamy"  id="003">
        <addPrimaryKey columnNames="company_name" constraintName="pk_company_name" tableName="bse_mid_cap_gainer" validate="true"/>
    </changeSet>

    <changeSet  author="Ravaneswaran Chinnasamy"  id="004">
        <dropColumn columnName="id" tableName="bse_mid_cap_gainer">
            <column name="id"/>
        </dropColumn>
    </changeSet>

</databaseChangeLog>