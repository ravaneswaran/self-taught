<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet id="001" author="Ravaneswaran Chinnasamy">
        <createTable tableName="stock_market_holidays">
            <column name="id" type="varchar2(100)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="holidate" type="varchar2(100)"/>
            <column name="holiday" type="varchar2(100)"/>
            <column name="description" type="varchar2(100)"/>
            <column name="created_date" type="datetime"/>
            <column name="modified_date" type="datetime"/>
            <column name="created_by" type="varchar2(100)"/>
            <column name="modified_by" type="varchar2(100)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>